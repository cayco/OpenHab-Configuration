	SUM = SUM-1.3816e-7 * (Math::pow(10,(11.344*(1-1/A0)).doubleValue())-1)
	SUM = SUM+8.1328e-3 * (Math::pow(10,(-3.49149*(A0-1)).doubleValue())-1)
	SUM = SUM+Math::log10(1013.246).doubleValue()
