		sendCommand(FanSwitch, ON)
	} else if (FanSwitch.state == ON && Humidity_GF_Toilet.state < 60 && Light_GF_Toilet.state < 20 && inTimer == 0) {
		sendCommand(FanSwitch, OFF)
	}	
end
